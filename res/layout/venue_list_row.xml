<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/venue_name_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/venue_row_name_label" />

    <TextView
        android:id="@+id/distance_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingEnd="@dimen/distance_text_horizontal_padding"
        android:paddingStart="@dimen/distance_text_horizontal_padding"
        android:paddingRight="@dimen/distance_text_horizontal_padding"
        android:paddingLeft="@dimen/distance_text_horizontal_padding"
        android:text="@string/distance_row_label" />

</LinearLayout>
